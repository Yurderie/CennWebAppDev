<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>

<!--Content for the Add Page-->

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <form class="form" method="POST">
                <div class="form group">
                    <label for="nameTextField">Book Title</label>
                    <input type="text" class="form control" id="nameTextField" placeholder="Enter the Book Title" name="name" required>
                </div>
                <div class="form group">
                    <label for="authorTextField">Author Name</label>
                    <input type="text" class="form control" id="authorTextField" placeholder="Enter the Author Name" name="author" required>
                </div>
                <div class="form group">
                    <label for="publishedTextField">Year</label>
                    <input type="text" class="form control" id="publishedTextField" placeholder="Enter the Publication Year" name="published" required>
                </div>
                <div class="form group">
                    <label for="descriptionTextField">Year</label>
                    <textarea type="text" class="form control" id="descriptionTextArea" placeholder="Enter the Book's Description" name="description" required></textarea>
                </div>
                <div class="form group">
                    <label for="priceTextField">Price</label>
                    <input type="decimal" class="form control" id="priceTextField" placeholder="Enter the Book's Price" name="price" required>
                </div>
                <button class = "btn btn-primary" type="submit"><i class="fas fa-edit"></i>submit</button>
                <a href="/bookList" class = "btn btn-warning" type="cancel"><i class="fas fa-undo"></i>cancel</a>



                


            </form>
        </div>
    </div>


</div>

<%-include ../partials/bottom_nav.ejs%>
